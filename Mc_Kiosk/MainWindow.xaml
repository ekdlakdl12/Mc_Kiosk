<Window x:Class="Mc_Kiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="맥도날드 키오스크" Height="974" Width="600"
        FontFamily="Malgun Gothic">

    <Grid>

        <Grid x:Name="Screen1Grid" Visibility="Visible">
            <Image x:Name="TopAdImage" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top"
                   Width="600" 
                   Height="650"
                   Stretch="UniformToFill"
                   Source="/Images/Mc_top_ad.jpg" 
                   Margin="0"/>

            <Grid VerticalAlignment="Top" Height="250" Background="White" Margin="0,691,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#FFC72C" Margin="47,28,373,56" CornerRadius="5" Grid.ColumnSpan="2">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="/Images/point.png" Height="60" Width="60" Margin="5" Stretch="Uniform"/>
                        <TextBlock Text="포인트를 적립하세요" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="결제 전 선택 필수" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Button x:Name="OrderButton" 
                            Content="주문하기" 
                            Height="108" 
                            Width="266"
                            HorizontalAlignment="Right"
                            Background="#FFC72C" 
                            BorderBrush="#FFC72C" 
                            Foreground="Black" 
                            FontSize="36" 
                            Margin="0,0,10,30"
                            Click="OrderButton_Click"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,10">
                    <TextBlock Text="언어" FontSize="14" Margin="0,0,20,0" Foreground="Gray"/>
                    <TextBlock Text="도움 기능" FontSize="14" Foreground="Gray"/>
                </StackPanel>
            </Grid>
        </Grid>


        <Grid x:Name="Screen2Grid" Background="#F5F5F5" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Background="White" HorizontalAlignment="Center">
                <Button x:Name="BurgerButton" 
                        Content="버거" 
                        Width="150" 
                        Height="60" 
                        FontSize="20" 
                        Margin="10,0" 
                        Background="#FFC72C"
                        Click="CategoryButton_Click"/>

                <Button x:Name="SideButton" 
                        Content="사이드" 
                        Width="150" 
                        Height="60" 
                        FontSize="20" 
                        Margin="10,0" 
                        Background="LightGray"
                        Click="CategoryButton_Click"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
                <ItemsControl x:Name="MenuListView">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="280" Height="300" Margin="10" Background="White" BorderBrush="LightGray" BorderThickness="1"
                                    MouseLeftButtonDown="MenuItem_MouseLeftButtonDown" Cursor="Hand">
                                <StackPanel>
                                    <Image Width="200" Height="150" Margin="5" Source="{Binding imageUrl}"/>
                                    <TextBlock Text="{Binding name_ko}" FontWeight="Bold" FontSize="18" Margin="5,5,5,0" TextAlignment="Center"/>
                                    <TextBlock Text="{Binding kcal, StringFormat='칼로리: {0}'}" FontSize="14" Foreground="Gray" TextAlignment="Center"/>
                                    <TextBlock Text="{Binding price_display}" FontSize="20" FontWeight="SemiBold" Foreground="#FFC72C" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Grid Grid.Row="2" Background="#333333">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="20,0,0,0">
                    <TextBlock Text="총 주문 금액:" Foreground="White" FontSize="18"/>
                    <TextBlock x:Name="TotalAmountTextBlock" 
                               Text="₩ 0" 
                               Foreground="#FFC72C" 
                               FontSize="32" 
                               FontWeight="Bold"/>
                </StackPanel>

                <Button x:Name="PaymentButton" 
                        Grid.Column="1" 
                        Content="결제하기" 
                        Background="#FFC72C" 
                        Foreground="Black" 
                        FontSize="24" 
                        Margin="10,30,10,30" 
                        Click="PaymentButton_Click"/>
            </Grid>

        </Grid>

    </Grid>
</Window>